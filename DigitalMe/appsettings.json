{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=digitalme.db"
  },
  "JWT": {
    "Key": "YourSuperSecretKeyThatNeedsToBeAtLeast32CharactersLong!",
    "Issuer": "DigitalMe.API",
    "Audience": "DigitalMe.Client",
    "ExpireHours": 24
  },
  "Anthropic": {
    "ApiKey": "",
    "ApiKeyEnvironmentVariable": "ANTHROPIC_API_KEY",
    "Model": "claude-3-5-sonnet-20241022",
    "TimeoutSeconds": 30,
    "MaxRetries": 3,
    "BaseUrl": "https://api.anthropic.com"
  },
  "Integrations": {
    "Slack": {
      "Enabled": false,
      "BotToken": "",
      "SigningSecret": "",
      "WorkspaceId": "",
      "TimeoutSeconds": 30,
      "MaxRetries": 3,
      "RateLimitPerMinute": 60
    },
    "ClickUp": {
      "Enabled": false,
      "ApiToken": "",
      "TeamId": "",
      "WorkspaceId": "",
      "DefaultSpaceId": "",
      "DefaultListId": "",
      "EnableTimeTracking": true,
      "EnableWebhooks": true,
      "WebhookSecret": "",
      "DefaultAssigneeId": null,
      "DefaultPriority": 3,
      "DefaultStatus": "To Do",
      "BaseUrl": "https://api.clickup.com/api/v2",
      "TimeoutSeconds": 30,
      "MaxRetries": 3,
      "RateLimitPerMinute": 100
    },
    "GitHub": {
      "Enabled": true,
      "PersonalAccessToken": "",
      "WebhookSecret": "",
      "Organization": "",
      "BaseUrl": "https://api.github.com",
      "TimeoutSeconds": 30,
      "MaxRetries": 3,
      "RateLimitPerMinute": 5000
    },
    "Google": {
      "Enabled": true,
      "ClientId": "",
      "ClientSecret": "",
      "RedirectUri": "http://localhost:5000/auth/google/callback",
      "TimeoutSeconds": 30,
      "MaxRetries": 3,
      "RateLimitPerMinute": 1000
    },
    "Telegram": {
      "Enabled": true,
      "BotToken": "",
      "WebhookUrl": "http://localhost:5000/api/telegram/webhook",
      "TimeoutSeconds": 30,
      "MaxRetries": 3,
      "RateLimitPerMinute": 30
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/digitalme-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Security": {
    "MaxPayloadSizeBytes": 1048576,
    "RateLimitRequestsPerMinute": 100,
    "JwtTokenExpiryMinutes": 60,
    "EnableInputSanitization": true,
    "EnableRateLimiting": true,
    "AllowedOrigins": ["localhost", "127.0.0.1"],
    "BlockedIpRanges": []
  },
  "Backup": {
    "BackupDirectory": "backups",
    "RetentionDays": 7,
    "MaxBackups": 30,
    "AutoCleanup": true,
    "AutoBackup": true,
    "BackupSchedule": "0 2 * * *"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}