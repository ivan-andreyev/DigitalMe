{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=/app/data/digitalme.db"
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://*:8080"
      }
    },
    "Limits": {
      "MaxConcurrentConnections": 1000,
      "MaxConcurrentUpgradedConnections": 100,
      "MaxRequestBodySize": 30000000,
      "KeepAliveTimeout": "00:02:00",
      "RequestHeadersTimeout": "00:00:30"
    }
  },
  "RuntimeOptimizations": {
    "GCServer": true,
    "GCConcurrent": true,
    "GCRetainVM": true,
    "ThreadPoolMinWorkerThreads": 50,
    "ThreadPoolMinCompletionPortThreads": 50
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "DigitalMe": "Information"
    }
  },
  "Telegram": {
    "BotToken": "",
    "WebhookUrl": "https://digitalme-api.com/api/telegram/webhook"
  },
  "JWT": {
    "Issuer": "DigitalMe.API",
    "Audience": "DigitalMe.Client",
    "ExpireHours": 8
  },
  "Security": {
    "MaxPayloadSizeBytes": 1048576,
    "RateLimitRequestsPerMinute": 60,
    "JwtTokenExpiryMinutes": 480,
    "EnableInputSanitization": true,
    "EnableRateLimiting": true,
    "AllowedOrigins": [],
    "BlockedIpRanges": []
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console"],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "DigitalMe": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Backup": {
    "BackupDirectory": "/app/backups",
    "RetentionDays": 7,
    "MaxBackups": 30,
    "AutoCleanup": true,
    "AutoBackup": true,
    "BackupSchedule": "0 2 * * *"
  }
}