    flex-direction: column;
    gap: 8px;
}

.activity-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 8px 0;
    border-bottom: 1px solid #f0f0f0;
}

.activity-item:last-child {
    border-bottom: none;
}

.label {
    font-size: 14px;
    color: #757575;
}

.value {
    font-size: 14px;
    color: #212121;
    font-weight: 500;
}

.value.status.online {
    color: #4caf50;
}

.value.status.offline {
