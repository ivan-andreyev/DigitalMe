    border-radius: 12px;
    padding: 16px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.status-section h2, .traits-section h2, .activity-section h2 {
    color: #1a237e;
    font-size: 18px;
    margin: 0 0 16px 0;
}

.status-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 12px;
}

.status-card {
    background: linear-gradient(135deg, var(--card-color-1), var(--card-color-2));
    color: white;
    padding: 16px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    gap: 12px;
}

.status-card.primary {
    --card-color-1: #1a237e;
    --card-color-2: #3f51b5;
}

.status-card.secondary {
    --card-color-1: #ff6f00;
    --card-color-2: #ff9800;
}

.card-icon {
    font-size: 24px;
    flex-shrink: 0;
}

.card-title {
    font-size: 20px;
    font-weight: 700;
    line-height: 1.2;
}

.card-subtitle {
    font-size: 12px;
    opacity: 0.9;
    line-height: 1.2;
}

.traits-list {
    display: flex;
    flex-direction: column;
    gap: 12px;
}

.trait-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px;
    background: #f5f5f5;
    border-radius: 8px;
}

.trait-icon {
    font-size: 20px;
    flex-shrink: 0;
}

.trait-info {
