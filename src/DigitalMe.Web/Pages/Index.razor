@page "/"
@using DigitalMe.Web.Components.Chat
@using DigitalMe.Web.Components.Dashboard

<PageTitle>DigitalMe - Enterprise AI Platform</PageTitle>

<div class="landing-page">
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="hero-content">
                <div class="hero-text">
                    <h1 class="hero-title">DigitalMe Enterprise Platform</h1>
                    <p class="hero-subtitle">AI-Powered Digital Personality Platform with Enterprise Integrations</p>
                    <div class="hero-features">
                        <div class="feature-item">
                            <span class="feature-icon">🧠</span>
                            <span>Advanced AI Personality Modeling</span>
                        </div>
                        <div class="feature-item">
                            <span class="feature-icon">🔗</span>
                            <span>Enterprise Integrations</span>
                        </div>
                        <div class="feature-item">
                            <span class="feature-icon">🚀</span>
                            <span>Production-Ready Platform</span>
                        </div>
                    </div>
                    <div class="hero-actions">
                        <a href="/chat" class="btn btn-primary">Start Demo</a>
                        <a href="/dashboard" class="btn btn-secondary">View Analytics</a>
                    </div>
                </div>
                <div class="hero-visual">
                    <div class="platform-preview">
                        <div class="preview-header">
                            <div class="preview-controls">
                                <span class="control"></span>
                                <span class="control"></span>
                                <span class="control"></span>
                            </div>
                            <span class="preview-title">DigitalMe Platform</span>
                        </div>
                        <div class="preview-content">
                            <div class="ai-avatar">
                                <div class="avatar-circle">
                                    <span class="avatar-icon">🤖</span>
                                </div>
                                <div class="ai-status">
                                    <span class="status-indicator active"></span>
                                    <span class="status-text">AI Active</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

