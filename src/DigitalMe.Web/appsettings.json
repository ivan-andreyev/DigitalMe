{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=digitalme-web.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.SignalR": "Information"
    }
  },
  "AllowedHosts": "*",
  "DigitalMe": {
    "ApiBaseUrl": "https://localhost:7064",
    "SignalRHub": "/chathub",
    "Authentication": {
      "JwtSecret": "your-secret-key-here-should-be-32-chars",
      "Issuer": "DigitalMe",
      "Audience": "DigitalMe-Web"
    },
    "Features": {
      "UseRealSignalR": true,
      "UseRealAuthentication": false,
      "EnableLogging": true
    }
  }
}
